extends ./../layouts/master

block content 
 .row
  .large-12.columns
   h2 Shopping Cart 
    span
     a(href='/cart/remove') Empty Cart
   if cart.items
    table
     thead
      tr
       th(width='650') Item
       th(width='100') Quantity
       th(width='100') Total
       th(width='100')
     tbody
      for individualItem, i  in cart.items 
       tr
        td
         a(href=`/books/details/${individualItem._id}`) #{individualItem.title}
        td #{individualItem.qty}
        - const total =  individualItem.qty * individualItem.price
        td ₹#{total}
      else
       p There are no item in your cart
 .row
  .large-6.columns
  h4 Total: ₹ 
   strong=cart.total
  .large-6.columns
   form(action='https://www.sandbox.paypal.com/cgi-bin/webscr', method='post')
    input(type='hidden', name='cmd', value='_xclick') 
    input(type='hidden', name='business', value='techguyseller@sandbox.com')
    input(type='hidden', name='item_name', value='TekBooks Books')
    input(type='hidden', name='item_number', value='1')
    input(type='hidden', name='currency_code', value='USD')
    input(type='hidden', name='amount', value='{cart.total}')
    input(type='hidden', name='no_shipping', value='1')
    input(type='hidden', name='rm', value='2')
    input(type='hidden', name='return', value='http://localhost:8000')
    input(type='hidden', name='cancel_return', value='http://localhost:8000')
    input(type='image', src='https://www.paypalobjects.com/webstatic/en_US/btn/btn_buynow_107x26.png', name='submit', alt='Buy Now')
